
{{>privateNavbar}}

<div class="container d-flex flex-column align-items-center">
  <h2 class="mb-3 text-center">{{user.username}} - enter the details for your new post</h2>
  <a href="/dashboard" class="btn btn-success btn-lg m-4">Back to my dashboard</a>
  </div>

<div class="container" id="add-post-container">
  <div
        class="container post-container d-flex flex-column align-items-stretch" id="post-container"
      >
        <div class="card border-success mb-3">
          <div class="card-header d-flex flex-row justify-content-between">
            <h4 class="card-title">Add the content for your new blog post</h4>
          </div>
          <div class="card-body">
            <form class="text-left" id="add-post-form">
              <fieldset>
                <div class="form-group">
                  <label for="inputTitle" class="form-label">Title</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputTitle"
                    aria-describedby="titleHelp"
                    placeholder="Enter the title for your new post"
                    minlength="3"
                    maxlength="50"
                  />
                  <small id="titleHelp" class="form-text text-muted"
                    >Limit of 50 characters</small
                  >
                </div>
                <div class="form-group">
                  <label for="inputPostText" class="form-label mt-4"
                    >Description</label
                  >
                  <textarea
                    class="form-control"
                    id="inputPostText"
                    rows="5"
                  ></textarea>
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                  <button type="submit" class="btn btn-success mt-3" id="add-post-btn" data-id={{user.id}}>
                    Submit
                  </button>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>


</div>