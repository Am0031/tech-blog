
{{>privateNavbar}}

<div class="container d-flex flex-column align-items-center">
  <h2 class="mb-3 text-center">Dashboard  -  All posts for {{username}}</h2>
  <div class="media-class justify-content-around">
    <a href="/dashboard/create" class="btn btn-success btn-lg m-4" id="add-post-btn">Add new post</a>
    <a href="/dashboard/comments" class="btn btn-info btn-lg m-4" id="view-comments-btn">See your comments instead</a>
    <a href="/" class="btn btn-info btn-lg m-4" id="home-btn">Go to the Home page</a>
  </div>
  </div>

<div class="container" id="my-content-container">


{{#if data.length}}
      <div
        class="container post-container d-flex flex-column align-items-stretch" id="my-posts-container"
      >
        {{#each data}}
        <div class="card border-success mb-3" id="post-{{id}}">
          <div class="card-header media-class justify-content-between">
            <h4 class="card-title">{{title}}</h4>
            <div>
              <button class="btn btn-primary" type="button" data-btnId="edit-post-btn" data-postId={{id}}>Edit</button>
              <button class="btn btn-danger" type="button" data-btnId="delete-post-btn" data-postId={{id}}>Delete</button>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text postDate">Added on {{formatDate date}}</p>
          </div>
        </div>
        {{/each}}
      </div>

{{else}}

      <div
        class="container post-container d-flex flex-column align-items-stretch mt-4"
      >
        <div class="alert alert-warning">
        <h4 class="alert-heading text-center">You don't have any posts!</h4>
        <p class="mb-0 text-center"> You can get started and create your first post by clicking on the <a href="/dashboard/create" class="alert-link">"Add new post"</a> button!</p>
        </div>
      </div>

{{/if}}

</div>