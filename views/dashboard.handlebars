
{{>privateNavbar}}

<div class="container d-flex flex-column align-items-center">
  <h1 class="display-4 mb-3 text-center">{{user}} - All my blog posts</h1>
  <button type="button" class="btn btn-success btn-lg mt-4" id="add-btn">Add new post</button>
  </div>

<div class="container">

      <div
        class="container post-container d-flex flex-column align-items-stretch"
      >
        {{#each data}}
        <div class="card border-success mb-3">
          <div class="card-header d-flex flex-row justify-content-between">
            <h4 class="card-title">{{title}}</h4>
            <div>
              <a class="btn btn-primary" href="/dashboard/edit/{{id}}" id="edit-btn-{{id}}">Edit</a>
              <a class="btn btn-danger" role="button" id="delete-btn-{{id}}">Delete</a>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text">Added on {{date}} - {{commentCount}}</p>
          </div>
        </div>
        {{/each}}
      </div>
</div>