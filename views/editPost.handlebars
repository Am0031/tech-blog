
{{>privateNavbar}}

<div class="container d-flex flex-column align-items-center">
  <h1 class="mb-3 text-center">{{user.username}} - you can edit your post below</h1>
  <a href="/dashboard" class="btn btn-success btn-lg m-4">Back to my dashboard</a>
  </div>

<div class="container" id="edit-post-container">
  <div
        class="container post-container d-flex flex-column align-items-stretch" id="post-container"
      >
        <div class="card border-success mb-3">
          <div class="card-header d-flex flex-row justify-content-between">
            <h4 class="card-title">Change the title or text below and click submit to update your post</h4>
          </div>
          <div class="card-body">
            <form class="text-left" id="edit-post-form">
              <fieldset>
                <div class="form-group">
                  <label for="inputTitle" class="form-label">Title</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputTitle"
                    aria-describedby="titleHelp"
                    value="{{data.title}}"
                    minlength="3"
                    maxlength="50"
                  />
                  <small id="titleHelp" class="form-text text-muted"
                    >Limit of 50 characters</small
                  >
                </div>
                <div class="form-group">
                  <label for="textarea" class="form-label mt-4"
                    >Description</label
                  >
                  <textarea
                    class="form-control"
                    id="inputPostText"
                    rows="5"
                  >{{data.postText}}</textarea>
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                  <button type="submit" class="btn btn-success mt-3" id="edit-submit-btn" data-postId={{data.id}} data-userId={{user.id}}>
                    Submit
                  </button>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>


</div>