{{#if isLoggedIn}}
{{>privateNavbar}}
{{else}}
{{>publicNavbar}}
{{/if}}

<div class="container">
      
    {{#if isLoggedIn}}
    <h1 class="display-4 mb-3 text-center">All blog posts</h1>
    {{else}}
    <h1 class="display-4 mb-3 text-center">All blog posts</h1>
      <div class="container">
        <div class="container text-center">
          <div class="d-flex flex-row">
            <div class="card-header d-flex flex-column m-5">
              <h4 class="mt-4">
                Become a member and start posting on the tech blog
              </h4>
              <a
                class="btn btn-success btn-lg mt-4"
                href="/signup"
                role="button"
                >Sign Up</a
              >
            </div>
            <div class="card-header d-flex flex-column m-5">
              <h4 class="mt-4">
                Already a member? Just login to access all features of the tech
                blog
              </h4>
              <a class="btn btn-primary btn-lg mt-4" href="/login" role="button"
                >Log In</a
              >
            </div>
          </div>
        </div>
      </div>
      {{/if}}

      <div
        class="container post-container d-flex flex-column align-items-stretch"
      >
        <div class="card border-success mb-3">
          <div class="card-header d-flex flex-row justify-content-between">
            <h4 class="card-title">{{this.title}}</h4>
            <p class="postText">Created By: {{this.user}} on {{this.date}}</p>
          </div>
          <div class="card-body">
            <p class="postText">{{this.postText}}</p>
          </div>
        </div>
      

      {{#each this.comments}}
      <div class="card border-info mb-3">
          <div class="card-body d-flex flex-column">
            <p class="commentText">{{commentText}}</p>
            <p class="commentText">Commented by {{commentUser}} on {{commentDate}}</p>
          </div>
        </div>
      {{/each}}
      </div>
</div>