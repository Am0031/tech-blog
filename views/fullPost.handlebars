{{#if isLoggedIn}}
{{>privateNavbar}}
{{else}}
{{>publicNavbar}}
{{/if}}

<div class="container">
      
    {{#if isLoggedIn}}
    <h1 class="display-4 mb-3 text-center">Full post</h1>
    {{else}}
    <h1 class="display-4 mb-3 text-center">Full Post</h1>
      <div class="container">
        <div class="container text-center">
          <div class="d-flex flex-row">
            <div class="card-header d-flex flex-column m-5">
              <h4 class="mt-4">
                Become a member and start posting on the tech blog
              </h4>
              <a
                class="btn btn-success btn-lg mt-4"
                href="/signup"
                role="button"
                >Sign Up</a
              >
            </div>
            <div class="card-header d-flex flex-column m-5">
              <h4 class="mt-4">
                Already a member? Just login to access all features of the tech
                blog
              </h4>
              <a class="btn btn-primary btn-lg mt-4" href="/login" role="button"
                >Log In</a
              >
            </div>
          </div>
        </div>
      </div>
      {{/if}}

        

      <div
        class="container post-container d-flex flex-column align-items-stretch"
      >
      <div class="d-flex flex-column align-items-center mb-3">
          <a
            class="btn btn-success m-3 btn btn-success"
            style="width: 200px"
            href="/"
            >Back to All Posts
          </a>
          <p class="mb-3">Want to remove one of your posts? You can access this option through your <a href="/dashboard" class="alert-link">dashboard</a>!</p>
        </div>
        <div class="card border-success mb-3">
          <div class="card-header d-flex flex-row justify-content-between">
            <h4 class="card-title">{{data.title}}</h4>
            <p class="postText">Created By: {{data.user}} on {{data.date}}</p>
          </div>
          <div class="card-body">
            <p class="postText">{{data.postText}}</p>
          </div>
        </div>

       
        <div class="subtitle text-center">
          <h4 class="display-4 mb-3 text-center">Comments on this post</h4>
        </div>

         {{#if isLoggedIn}}
        <div class="card border-success mb-3" id="add-comment-container">
          <div class="card-header d-flex flex-row justify-content-between">
            <h4 class="card-title">Add a comment</h4>
          </div>
          <form class="text-left" id="comment-form">
            <div class="form-group m-2">
              <label for="textarea" class="form-label mt-4"
                >Type your comment here</label
              >
              <textarea class="form-control" id="inputCommentText" rows="5"></textarea>
            </div>
            <div class="form-group d-flex flex-column align-items-center">
              <button type="submit" class="btn btn-success mt-3" id="add-comment-btn" data-postId={{data.id}} data-userId={{data.userId}}>Submit</button>
            </div>
          </form>
        </div>
        {{/if}}
      

      {{#each data.comments}}
      <div class="card border-info mb-3">
          <div class="card-body d-flex flex-column">
            <p class="commentText">{{commentText}}</p>
            <p class="commentText">Commented by {{commentUser}} on {{commentDate}}</p>
          </div>
        </div>
      {{/each}}

      

      </div>
      
</div>